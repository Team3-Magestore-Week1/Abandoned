<config>
    <modules>
        <Magestore_Abandoned>
            <version>0.1.0</version>
        </Magestore_Abandoned>
    </modules>
    <frontend>
        <routers>
            <abandoned>
                <use>standard</use>
                <args>
                    <module>Magestore_Abandoned</module>
                    <frontName>abandoned</frontName>
                </args>
            </abandoned>
        </routers>
        <layout>
            <updates>
                <abandoned>
                    <file>abandoned.xml</file>
                </abandoned>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magestore_Abandoned>
                    <files>
                        <default>Magestore_Abandoned.csv</default>
                    </files>
                </Magestore_Abandoned>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Magestore_Abandoned before="Mage_Adminhtml">Magestore_Abandoned_Adminhtml</Magestore_Abandoned>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <abandoned>
                    <file>abandoned.xml</file>
                </abandoned>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magestore_Abandoned>
                    <files>
                        <default>Magestore_Abandoned.csv</default>
                    </files>
                </Magestore_Abandoned>
            </modules>
        </translate>
    </adminhtml>
    <global>
        <models>
            <abandoned>
                <class>Magestore_Abandoned_Model</class>
                <resourceModel>abandoned_mysql4</resourceModel>
            </abandoned>
            <abandoned_mysql4>
                <class>Magestore_Abandoned_Model_Mysql4</class>
                <entities>
                    <abandoned>
                        <table>magestore_abandoned</table>
                    </abandoned>
                    <configonoff>
                        <table>magestore_abandoned_configonoff</table>
                    </configonoff>
                </entities>
            </abandoned_mysql4>
        </models>
        <resources>
            <abandoned_setup>
                <setup>
                    <module>Magestore_Abandoned</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </abandoned_setup>
            <abandoned_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </abandoned_write>
            <abandoned_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </abandoned_read>
        </resources>
        <blocks>
            <abandoned>
                <class>Magestore_Abandoned_Block</class>
            </abandoned>
        </blocks>
        <helpers>
            <abandoned>
                <class>Magestore_Abandoned_Helper</class>
            </abandoned>
        </helpers>
        <sales>
            <quote>
                <totals>
                    <abandoned>
                        <class>abandoned/total_quote_abandoned</class>
                        <after>grand_total</after>
                    </abandoned>
                </totals>
            </quote>
        </sales>
        <template>
            <email>
                <magestore_abandoned_remind translate="label" module="abandoned">
                    <label>Remind Abandoned Cart</label>
                    <file>abandoned/abandoned_email.html</file>
                    <type>html</type>
                </magestore_abandoned_remind>
            </email>
        </template>
        <events>
            <core_block_abstract_to_html_before>
                <observers>
                    <magestore_abandoned_observer>
                        <type>singleton</type>
                        <class>abandoned/observer</class>
                        <method>showLinks</method>
                    </magestore_abandoned_observer>
                </observers>
            </core_block_abstract_to_html_before>
        </events>
    </global>
</config>